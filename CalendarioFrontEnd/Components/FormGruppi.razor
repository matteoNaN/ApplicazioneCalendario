@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<MudPaper Class="sfondo-base pa-4 mb-4" Elevation="0" Style="max-width: 800px; margin: 0 auto;">
    <EditForm Model="@Gruppoo" OnValidSubmit="HandleSubmit">
        <MudForm>
            <MudGrid Spacing="3" Justify="Justify.Center">
                <!-- Nome Gruppo -->
                <MudItem xs="12" md="6" Class="py-1">
                    <MudTextField @bind-Value="Gruppoo.Nome"
                                  Label="Nome Gruppo"
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  RequiredError="Il nome è obbligatorio"
                                  Immediate="true"
                                  Class="mud-input-outlined-mobile" />
                </MudItem>

                <!-- Descrizione -->
                <MudItem xs="12" md="6" Class="py-1">
                    <MudTextField @bind-Value="Gruppoo.Descrizione"
                                  Label="Descrizione"
                                  Variant="Variant.Outlined"
                                  Lines="3"
                                  Multiline="true"
                                  Class="mud-textarea-mobile" />
                </MudItem>

                <!-- Pulsanti -->
                <MudItem xs="12" Class="mt-3">
                    <MudGrid Justify="Justify.Center" Spacing="3">
                        <MudItem xs="12" md="4">
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       ButtonType="ButtonType.Submit"
                                       FullWidth="true"
                                       Class="mud-button-mobile">
                                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-2" />
                                Salva Gruppo
                            </MudButton>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
        </MudForm>
    </EditForm>
</MudPaper>
@code {
    private GruppooModel Gruppoo { get; set; } = new GruppooModel();

    private void HandleSubmit()
    {
        // Logica per il salvataggio del gruppo
        Console.WriteLine($"Gruppo creato: {Gruppoo.Nome} - {Gruppoo.Descrizione}");

        // Resetta il form dopo l'invio
        Gruppoo = new GruppooModel();
    }

    public class GruppooModel
    {
        public string Nome { get; set; }
        public string Descrizione { get; set; }
    }
}